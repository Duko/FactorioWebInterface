@page
@model FactorioWebInterface.Pages.Admin.BansModel
@{
    ViewData["Title"] = "Bans";
}

<div class="container-fluid">
    <section class="container section">
        <h2 class="title is-2">Bans</h2>
        <p>Bans that are added or removed from this page will be synced with all servers immediately.</p>
        <p>All bans issued in game or at the server console with /ban or /unban with be synced with all servers immediately and automatically have the admin and date time added.</p>
        <p>If a ban is performed on a player that is already banned, the new ban will overwrite the old ban.</p>
        <p>Click on a row to have the values filled into the form.</p>
    </section>

    <section class="container">
        <div class="columns is-centered">
            <form id="addBanForm" class="column is-8 box">
                <h4 class="title is-4">Add Ban</h4>
                <hr />

                <div class="field is-horizontal">
                    <div class="field-label">
                        <label for="usernameInput" class="label">Username:</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input id="usernameInput" type="text" class="input" required />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <label for="reasonInput" class="label">Reason:</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <textarea id="reasonInput" class="textarea" required></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <label for="adminInput" class="label">Admin:</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input id="adminInput" type="text" class="input" required value="@Model.Input.Admin" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <label for=" dateInput" class="label">Date:</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input id="dateInput" type="date" class="input" required value="@Model.Input.Date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <label for=" timeInput" class="label">Time:</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input id="timeInput" type="time" class="input" required step="1" value="@Model.Input.Time" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <label for="synchronizeWithServersCheckbox" class="label">Synchronize with servers:</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input id="synchronizeWithServersCheckbox" type="checkbox" class="checkbox" checked />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <!-- Left empty for spacing -->
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <button type="submit" class="button is-link">Confirm Ban</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </section>

    <section class="columns is-centered">
        <div class="column is-10 is-full-tablet">
            <h4 class="title is-4"><span>Ban List</span><span id="banCount" style="margin-left:1rem"></span></h4>

            <div style="height:900px; overflow:auto;">
                <table id="bansTable" class="table is-bordered is-striped is-hoverable is-fullwidth">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Reason</th>
                            <th>Admin</th>
                            <th style="width: 8rem">DateTime</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </section>

    @section Scripts{
        <environment include="Development">
            <script type="text/javascript" src="~/js/bans.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script type="text/javascript" src="~/js/bans.js"></script>
        </environment>
    }

</div>
